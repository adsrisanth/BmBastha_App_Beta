<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_place_order_page_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="15dp"
        android:background="@drawable/background_details_for_items">

        <RelativeLayout
            android:id="@+id/activity_place_order_page_layout1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >

            <ImageView
                android:id="@+id/activity_place_order_page_image_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_arrow"
                android:layout_centerVertical="true"
                android:scaleX="1.3"
                android:scaleY="1.3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/activity_place_order_page_image_5"
                android:layout_centerVertical="true"
                android:text="Payments"
                android:textColor="#3A3939"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_place_order_page_layout1"
            android:padding="15dp"
            android:background="@drawable/background_totalamountbtn">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#198F51"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="317"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#198F51"
                android:textStyle="bold"
                android:textSize="18sp"/>


        </RelativeLayout>



    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_place_order_page_layout2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/activity_place_order_page_layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_details_for_items"
                android:padding="15dp"
                >

                <ImageView
                    android:id="@+id/activity_place_order_page_image_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/activity_place_order_page_image_1"
                    android:layout_centerVertical="true"
                    android:text="UPI"
                    android:textStyle="bold"
                    android:textColor="#3E3C3C"
                    android:textSize="18dp"
                    android:layout_marginLeft="15dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_place_order_page_layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_details_for_items"
                android:padding="15dp"
                android:layout_below="@+id/activity_place_order_page_layout3"
                >

                <ImageView
                    android:id="@+id/activity_place_order_page_image_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/card_payment"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/activity_place_order_page_image_2"
                    android:layout_centerVertical="true"
                    android:text="Credit / Debit/ ATM Card"
                    android:textColor="#3E3C3C"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="15dp"/>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_place_order_page_layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_details_for_items"
                android:padding="15dp"
                android:layout_below="@+id/activity_place_order_page_layout4"
                >

                <ImageView
                    android:id="@+id/activity_place_order_page_image_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/net_banking"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/activity_place_order_page_image_3"
                    android:layout_centerVertical="true"
                    android:text="Net Banking"
                    android:textColor="#3E3C3C"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="15dp"/>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_place_order_page_layout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_details_for_items"
                android:padding="15dp"
                android:layout_below="@+id/activity_place_order_page_layout5"
                >

                <ImageView
                    android:id="@+id/activity_place_order_page_image_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/cash_on_delivery"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/activity_place_order_page_image_4"
                    android:layout_centerVertical="true"
                    android:text="Cash on Delivery"
                    android:textColor="#3E3C3C"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="15dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/down_arrow"/>



            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>