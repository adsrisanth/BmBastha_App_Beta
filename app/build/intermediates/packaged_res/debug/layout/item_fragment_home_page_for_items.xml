<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/item_fragment_home_page_for_item_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/item_fragment_home_page_for_item_click_item"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_fragment_home_page_for_item_img_1"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/rice_append"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:background="#25E616"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >

                <TextView
                    android:id="@+id/item_fragment_home_page_for_item_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹100 off"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_fragment_home_page_for_item_img_1"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/item_fragment_home_page_for_item_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="She shell seash ells on the .."
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#3C3C3C"/>

                <TextView
                    android:id="@+id/item_fragment_home_page_for_item_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 kg - pouch"
                    android:layout_below="@+id/item_fragment_home_page_for_item_text_1"
                    android:textSize="13dp"
                    android:textColor="#8A8A8A"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/item_fragment_home_page_for_item_text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹322.50"
                    android:layout_below="@+id/item_fragment_home_page_for_item_text_2"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:textColor="@color/black"/>





            </RelativeLayout>


        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>