<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_common_filter_item_it"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <CheckBox
            android:id="@+id/item_common_filter_item_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/item_common_filter_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/item_common_filter_item_check_box"
            android:layout_centerVertical="true"
            android:text="Rs.2001 and above"
            android:scaleX="1"
            android:scaleY="1"
            android:textSize="17dp"
            android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>