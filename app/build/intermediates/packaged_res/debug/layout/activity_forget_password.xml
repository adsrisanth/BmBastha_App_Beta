<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account.forgetPassword">

    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/activity_forget_append_text_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/activity_forget_append_relative_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/activity_forget_append_text_heading"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:id="@+id/activity_forget_password_layout_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/activity_forgrt_text_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verify"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        android:textColor="#8DDDB3"/>

                    <TextView
                        android:id="@+id/activity_forgrt_text_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="#222121"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginLeft="5dp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="10dp"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/activity_forgrt_text_2"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        >

                        <EditText
                            android:id="@+id/activity_forgrt_text_3"
                            android:inputType="textEmailAddress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Enter your mail"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:background="@color/white"
                            android:enabled="true"
                            android:textStyle="normal"
                            android:textSize="17dp"/>

                        <ImageView
                            android:id="@+id/activity_forgot_img_ver"
                            android:layout_width="32dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/imgver"
                            android:scaleX="0.4"
                            android:scaleY="0.4"
                            android:visibility="invisible"
                            android:layout_gravity="right"/>



                    </androidx.cardview.widget.CardView>




                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/activity_forget_layout_otp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <in.aabhasjindal.otptextview.OtpTextView
                        android:id="@+id/forget_otp_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        app:height="40dp"
                        app:width="40dp"
                        app:bar_enabled="true"
                        app:bar_height="2dp"
                        app:length="6"
                        app:otp_text_size="24dp"
                        />

                    <TextView
                        android:id="@+id/activity_forget_use_another_mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Use another mail"
                        android:layout_below="@+id/forget_otp_view"
                        android:layout_marginTop="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/grey_font"
                        android:clickable="false"
                        />

                    <RelativeLayout
                        android:layout_below="@+id/forget_otp_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_alignParentRight="true"
                        >

                        <TextView
                            android:id="@+id/activity_forger_resend_otp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Resend otp"
                            android:textColor="@color/grey_font"
                            android:textStyle="bold"
                            android:clickable="false"
                            />


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/activity_forget_append_relative_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    >

                    <TextView
                        android:id="@+id/activity_forget_append_text_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create Password"
                        android:textColor="#222121"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginLeft="5dp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="10dp"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/activity_forget_append_text_4"
                        app:cardCornerRadius="10dp"
                        >

                        <EditText
                            android:id="@+id/activity_forget_edit_text3"
                            android:inputType="textPassword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Create password"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:background="@color/white"
                            android:textStyle="normal"
                            android:textSize="17dp"/>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/activity_forget_btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/backgroung_login_btn"
                    android:clickable="false"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_forget_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#349E9E9E"
        android:visibility="invisible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</RelativeLayout>