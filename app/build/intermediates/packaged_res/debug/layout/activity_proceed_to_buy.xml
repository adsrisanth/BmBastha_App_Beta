<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_version.proceed_to_buy_activity">

    <androidx.cardview.widget.CardView
        android:id="@+id/activity_proceed_to_buy_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/white"
            android:padding="10dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/place_order_btn"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_proceed_to_buy_layout_1"
        android:layout_alignParentTop="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1EFEF">

            <RelativeLayout
                android:id="@+id/activity_proceed_to_buy_layout_2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/background_details_for_items"
                android:elevation="5dp"
                >

                <ImageView
                    android:id="@+id/activity_proceed_to_buy_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_arrow"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:scaleY="1.5"
                    android:scaleX="1.5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/activity_proceed_to_buy_img"
                    android:text="Order Summary"
                    android:layout_marginLeft="20dp"
                    android:textColor="#2C2C2C"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

            </RelativeLayout>
            
            <LinearLayout
                android:id="@+id/activity_proceed_to_buy_layout_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_proceed_to_buy_layout_2"
                android:orientation="vertical">
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@color/white"
                    android:visibility="visible"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <RelativeLayout
                            android:id="@+id/activity_proceed_to_buy_layout_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true">

                            <TextView
                                android:id="@+id/activity_proceed_to_buy_text_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:text="Kulukuri Praneeth"
                                android:textStyle="bold"
                                android:textColor="#4A4A4A"
                                android:textSize="18sp"/>

                            <RelativeLayout
                                android:id="@+id/activity_proceed_to_buy_change_address_btn"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/background_add_address_btn"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Change"
                                    android:layout_centerInParent="true"
                                    android:textColor="#8E8C8C"
                                    android:textStyle="bold"/>

                            </RelativeLayout>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/activity_proceed_to_buy_text_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/activity_proceed_to_buy_layout_3"
                            android:layout_alignParentLeft="true"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:layout_marginTop="10dp"
                            android:text="19-60, Swanthra Nagar, Madharawada, Andhra Pradesh, 5300048"/>

                        <TextView
                            android:id="@+id/activity_proceed_to_buy_text_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/activity_proceed_to_buy_text_1"
                            android:text="8074674228"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"/>

                    </RelativeLayout>

                </RelativeLayout>

                
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/activity_proceed_to_buy_layout_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_proceed_to_buy_layout_4"
                android:layout_marginTop="7dp"
                android:padding="15dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/activity_proceed_to_buy_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cart (5 items)"
                    android:textColor="#4A4A4A"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:id="@+id/activity_proceed_to_buy_layout_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_below="@+id/activity_proceed_to_buy_text_2">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/activity_proceed_to_buy_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:padding="10dp"
                        android:orientation="horizontal"
                        tools:listitem="@layout/item_cart_at_activity_proceed_to_buy"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_proceed_to_buy_layout_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_below="@+id/activity_proceed_to_buy_layout_6"
                android:layout_marginTop="7dp"
                android:padding="15dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/activity_proceed_to_buy_text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coupon"
                    android:textColor="#4A4A4A"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/activity_proceed_to_buy_text_4"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_add_address_btn"
                    android:hint="Enter your Coupon"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/grey_font"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_proceed_to_buy_layout_12"
                android:layout_marginTop="7dp"
                android:padding="15dp"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/activity_proceed_to_buy_layout_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:background="@drawable/background_details_for_items"
                    >

                    <TextView
                        android:id="@+id/activity_proceed_to_buy_text_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price Details"
                        android:textColor="#4A4A4A"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <RelativeLayout
                        android:id="@+id/activity_proceed_to_buy_layout_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity_proceed_to_buy_text_3"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MRP( 5 items)"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹417"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/activity_proceed_to_buy_layout_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity_proceed_to_buy_layout_7"
                        android:layout_marginTop="13dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product Discount"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-₹100"
                            android:textColor="#33E633"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/activity_proceed_to_buy_layout_9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity_proceed_to_buy_layout_8"
                        android:layout_marginTop="13dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delevery Fee"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FREE DELEVERY"
                            android:textColor="#33E633"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/activity_proceed_to_buy_layout_11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_proceed_to_buy_layout_10"
                    android:layout_marginTop="13dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Amount"
                        android:textColor="#4A4A4A"
                        android:textStyle="normal"
                        android:textSize="18sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹317"
                        android:textColor="#4A4A4A"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>