<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/item_coupons_layout_1"
            >

            <ImageView
                android:id="@+id/item_coupons_img_1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/coupoons"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/item_coupons_img_1"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="#2C2C2C"
                android:textStyle="normal"
                android:text="get 10% jrijgoja aika orajgarjg prj ru rojglirg iah; ha; h ga;igha;ihrgahga;i ihf  hfih  ijir ihi"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_coupons_layout_2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/item_coupons_layout_1"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_details_for_items">

            <TextView
                android:id="@+id/item_coupons_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXXXXXXXX"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_coupons_text_1"
                android:text="(Long Press here to copy the coupon code)"
                android:textSize="17dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_coupons_layout_2"
            android:layout_marginTop="20dp"
            >

            <RelativeLayout
                android:id="@+id/item_coupons_layout_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                >

                <TextView
                    android:id="@+id/item_coupons_text_2"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Max Redemption:"
                    android:textSize="18dp"
                    android:textColor="#515151"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_toEndOf="@+id/item_coupons_text_2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#515151"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_coupons_layout_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/item_coupons_layout_3"
                >

                <TextView
                    android:id="@+id/item_coupons_text_3"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Creation Date:"
                    android:textSize="18dp"
                    android:textColor="#515151"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jul 05, 2023"
                    android:layout_toEndOf="@+id/item_coupons_text_3"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#515151"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_coupons_layout_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/item_coupons_layout_4"
                >

                <TextView
                    android:id="@+id/item_coupons_text_4"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Expiry Date:"
                    android:textSize="18dp"
                    android:textColor="#515151"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mar 31, 2024"
                    android:layout_toEndOf="@+id/item_coupons_text_4"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#515151"/>


            </RelativeLayout>

        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>