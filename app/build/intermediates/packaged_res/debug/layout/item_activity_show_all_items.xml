<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:background="@drawable/background_details_for_items">

    <RelativeLayout
        android:id="@+id/item_activity_show_all_items_layout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        >
        
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="170dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/grey_font"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:background="#3EBB7A"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20% off"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16dp"/>

                </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/item_activity_show_all_items_layout_1"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/item_activity_show_all_items_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand Name"
            android:textColor="@color/grey_font"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/item_activity_show_all_items_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_activity_show_all_items_text_1"
            android:layout_alignParentLeft="true"
            android:text="she sells seashells on the seashore"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#676565"/>

        <RelativeLayout
            android:id="@+id/item_activity_show_all_items_layout_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_activity_show_all_items_text_2"
            android:layout_marginTop="5dp"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/item_activity_show_all_items_layout_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#5B8EE86D"
                    android:paddingRight="3dp"
                    android:paddingLeft="7dp"
                    >

                    <TextView
                        android:id="@+id/item_activity_show_all_items_text_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="#34BA03"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleY="0.65"
                        android:scaleX="0.65"
                        android:src="@drawable/stra"
                        android:layout_toEndOf="@+id/item_activity_show_all_items_text_3"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1290 Ratings"
                android:layout_toEndOf="@+id/item_activity_show_all_items_layout_2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="@color/grey_font"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_activity_show_all_items_layout_4"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/item_activity_show_all_items_layout_3"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_select_quenty"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="5 kg - Pouch"
                android:layout_marginLeft="10dp"
                android:textColor="@color/grey_font"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/down_arrow"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_activity_show_all_items_layout_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_activity_show_all_items_layout_4"
            android:layout_marginTop="8dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="â‚¹322.50"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

        </RelativeLayout>

        <RelativeLayout
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_activity_show_all_items_layout_5"
            android:layout_marginTop="0dp">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="35dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#D81818"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Add"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>



        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>