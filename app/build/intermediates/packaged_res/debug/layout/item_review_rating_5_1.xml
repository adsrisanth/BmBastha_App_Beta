<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:background="@drawable/background_details_for_items">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_review_rating_5_1_layout_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#5B8EE86D"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            >

            <TextView
                android:id="@+id/item_review_rating_5_1_layout_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#34BA03"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY="0.65"
                android:scaleX="0.65"
                android:src="@drawable/stra"
                android:layout_toEndOf="@+id/item_review_rating_5_1_layout_1"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_review_rating_5_1_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_review_rating_5_1_layout_2"
        android:text="Good Product"
        android:textColor="#424040"
        android:textSize="18dp"
        android:textStyle="normal"
        android:layout_marginTop="13dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product good and packing also good"
        android:layout_below="@+id/item_review_rating_5_1_text_1"
        android:layout_marginTop="13dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#8E8E8E"/>

</RelativeLayout>