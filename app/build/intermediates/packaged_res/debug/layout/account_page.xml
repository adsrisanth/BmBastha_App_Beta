<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".user_version.account_fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E3E0E0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/account_page_layout_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <RelativeLayout
                            android:id="@+id/account_page_layout_change_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:visibility="visible">

                            <RelativeLayout
                                android:id="@+id/account_page_layout_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/account_page_text_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Welcome"
                                    android:textColor="#403F3F"
                                    android:textStyle="bold"
                                    android:textSize="16dp"
                                    android:layout_centerVertical="true"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/arrow_right_black"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/account_page_layout_1"
                                android:layout_below="@+id/account_page_layout_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:background="@drawable/background_account_btn"
                                        android:layout_alignParentLeft="true"
                                        android:paddingRight="10dp"
                                        android:layout_weight="1"
                                        android:layout_marginRight="10dp">

                                        <ImageView
                                            android:id="@+id/account_page_img_1"
                                            android:layout_width="28dp"
                                            android:layout_height="28dp"
                                            android:src="@drawable/order"
                                            android:layout_alignParentLeft="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="5dp"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="My Orders"
                                            android:layout_toEndOf="@+id/account_page_img_1"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="5dp"
                                            android:textSize="14sp"
                                            android:textStyle="bold"/>

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/account_page_address_book"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:background="@drawable/background_account_btn"
                                        android:paddingRight="0dp"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="10dp">

                                        <ImageView
                                            android:id="@+id/account_page_img_2"
                                            android:layout_width="28dp"
                                            android:layout_height="28dp"
                                            android:src="@drawable/adress"
                                            android:layout_alignParentLeft="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="5dp"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Address Book"
                                            android:layout_toEndOf="@+id/account_page_img_2"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="5dp"
                                            android:textSize="14sp"
                                            android:textStyle="bold"/>

                                    </RelativeLayout>

                                </LinearLayout>




                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/account_page_layout_2"
                                android:layout_below="@+id/account_page_layout_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="2">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:background="@drawable/background_account_btn"
                                        android:layout_alignParentLeft="true"
                                        android:paddingRight="10dp"
                                        android:layout_weight="1"
                                        android:layout_marginRight="10dp">

                                        <ImageView
                                            android:id="@+id/account_page_img_10"
                                            android:layout_width="28dp"
                                            android:layout_height="28dp"
                                            android:src="@drawable/baseline_list_24"
                                            android:layout_alignParentLeft="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="5dp"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="My List"
                                            android:layout_toEndOf="@+id/account_page_img_10"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="5dp"
                                            android:textSize="14sp"
                                            android:textStyle="bold"/>

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:background="@drawable/background_account_btn"
                                        android:paddingRight="0dp"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="10dp">

                                        <ImageView
                                            android:id="@+id/account_page_img_12"
                                            android:layout_width="28dp"
                                            android:layout_height="28dp"
                                            android:src="@drawable/baseline_help_center_24"
                                            android:layout_alignParentLeft="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="5dp"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Help Center"
                                            android:layout_toEndOf="@+id/account_page_img_12"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="5dp"
                                            android:textSize="14sp"
                                            android:textStyle="bold"/>

                                    </RelativeLayout>

                                </LinearLayout>

                            </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/account_page_layout_change_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/account_page_text_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Account"
                                android:textSize="18sp"
                                android:textColor="#1B1A1A"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Login into Your Account to Access."
                                android:layout_below="@+id/account_page_text_5"
                                android:textStyle="normal"
                                android:textColor="@color/grey_font"
                                android:textSize="16sp"
                                android:layout_marginTop="7dp"/>

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/account_page_layout_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/account_page_layout_4"
                    android:layout_marginTop="3dp"
                    app:cardBackgroundColor="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:padding="20dp">



                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/account_page_layout_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/account_page_layout_5"
                    android:layout_marginTop="3dp"
                    app:cardBackgroundColor="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="20dp">



                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/account_page_layout_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/account_page_layout_6"
                    android:layout_marginTop="3dp"
                    app:cardBackgroundColor="@color/white"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/account_page_text_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account Settings"
                            android:textSize="16dp"
                            android:textColor="#1B1A1A"
                            android:textStyle="bold"
                            />

                        <RelativeLayout
                            android:id="@+id/account_page_layout_8"
                            android:layout_below="@+id/account_page_text_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:layout_marginLeft="6dp"
                            >

                            <ImageView
                                android:id="@+id/account_page_img_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:src="@drawable/account"
                                android:scaleX="0.9"
                                android:scaleY="0.9"
                                />

                            <TextView
                                android:layout_toEndOf="@+id/account_page_img_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:text="Edit Profile"
                                android:layout_marginLeft="7dp"
                                android:textSize="15dp"
                                android:textColor="#636363"
                                android:textStyle="normal"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_below="@+id/account_page_layout_8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:layout_marginLeft="4dp"
                            >

                            <RadioButton
                                android:id="@+id/account_page_radio_btn1"
                                android:layout_width="28dp"
                                android:layout_height="20dp"
                                android:checked="true"
                                android:scaleX="0.8"
                                android:scaleY="0.9"
                                android:buttonTint="@color/black"
                                />

                            <TextView
                                android:layout_toEndOf="@+id/account_page_radio_btn1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="English"
                                android:layout_marginLeft="7dp"
                                android:textSize="15dp"
                                android:textColor="#636363"
                                android:textStyle="normal"/>

                        </RelativeLayout>




                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/account_page_layout_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    android:layout_below="@+id/account_page_layout_7"
                    android:layout_marginTop="3dp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/account_page_text_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Activity"
                            android:textSize="16dp"
                            android:textColor="#1B1A1A"
                            android:textStyle="bold"
                            />

                        <RelativeLayout
                            android:id="@+id/account_page_layout_9"
                            android:layout_below="@+id/account_page_text_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:layout_marginLeft="6dp"
                            >

                            <ImageView
                                android:id="@+id/account_page_img_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:src="@drawable/review"
                                android:scaleX="0.9"
                                android:scaleY="0.9"
                                />

                            <TextView
                                android:layout_toEndOf="@+id/account_page_img_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="Reviews"
                                android:layout_marginLeft="10dp"
                                android:textSize="15dp"
                                android:textColor="#636363"
                                android:textStyle="normal"/>

                        </RelativeLayout>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/account_page_layout_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/account_page_layout_10"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginTop="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/account_page_text_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Information"
                            android:textSize="16dp"
                            android:textColor="#1B1A1A"
                            android:textStyle="bold"
                            />

                        <RelativeLayout
                            android:id="@+id/account_page_layout_11"
                            android:layout_below="@+id/account_page_text_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:layout_marginLeft="6dp"
                            >

                            <ImageView
                                android:id="@+id/account_page_img_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:src="@drawable/privace_policy"
                                android:scaleY="0.9"
                                android:scaleX="0.9"
                                />

                            <TextView
                                android:layout_toEndOf="@+id/account_page_img_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="Privacy Policy"
                                android:layout_marginLeft="10dp"
                                android:textSize="15dp"
                                android:textColor="#636363"
                                android:textStyle="normal"/>

                        </RelativeLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/account_page_layout_13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/account_page_layout_12"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="60dp"
                    android:backgroundTint="@color/app_color1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    android:visibility="visible"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Logout"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/white"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/account_page_layout_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/account_page_layout_13"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="60dp"
                    android:backgroundTint="@color/app_color1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    android:visibility="gone"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Login"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/white"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</FrameLayout>